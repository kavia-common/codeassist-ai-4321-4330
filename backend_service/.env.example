# Backend Service - AI Copilot (MVP)
# Copy this file to .env and fill in values as needed.

# Required OpenAI credentials
OPENAI_API_KEY=sk-abcd1234efgh5678abcd1234efgh5678abcd1234

# Optional overrides
# Custom base URL for OpenAI-compatible API (default: https://api.openai.com/v1)
OPENAI_BASE_URL=https://api.openai.com/v1

# Default model to use when the request does not set a model (default: gpt-4o-mini)
DEFAULT_OPENAI_MODEL=gpt-4o-mini

# Comma-separated list or JSON array of allowed CORS origins
# Example (comma-separated): http://localhost:3000,https://yourdomain.com
# Example (JSON array string): ["http://localhost:3000","https://yourdomain.com"]
BACKEND_CORS_ORIGINS=http://localhost:3000

# Request timeout (seconds) for upstream OpenAI calls (default: 30)
REQUEST_TIMEOUT=30
